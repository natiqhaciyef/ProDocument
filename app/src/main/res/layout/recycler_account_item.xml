<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="24dp">

    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/security_outline_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/urbanist_bold"
        android:textColor="@color/grayscale_900"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/settingsIcon"
        app:layout_constraintEnd_toStartOf="@id/goDetailsIcon"
        app:layout_constraintStart_toEndOf="@id/settingsIcon"
        app:layout_constraintTop_toTopOf="@id/settingsIcon" />


    <ImageView
        android:id="@+id/goDetailsIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:rotation="270"
        android:src="@drawable/down_arrow_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/grayscale_900" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switchIcon"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:checked="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbTint="@color/primary_900"
        app:trackTint="@color/primary_200" />


</androidx.constraintlayout.widget.ConstraintLayout>