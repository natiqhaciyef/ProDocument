<?xml version="1.0" encoding="utf-8"?>
<com.natiqhaciyef.core.base.ui.BaseXmlConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/uiLayout"
    android:background="@color/grayscale_50"
    tools:context=".ui.view.main.payment.PaymentDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subscriptionTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/custom_cheque_summary_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/subscriptionPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/plan_title"
                android:textColor="@color/grayscale_700"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subscriptionPlanDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="Beginner plan"
                android:textColor="@color/grayscale_900"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/subscriptionPlanTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/subscriptionPlanTitle"
                app:layout_constraintTop_toTopOf="@+id/subscriptionPlanTitle" />


            <TextView
                android:id="@+id/subscriptionPlanDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/plan_date_title"
                android:textColor="@color/grayscale_700"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subscriptionPlanTitle" />

            <TextView
                android:id="@+id/subscriptionPlanDateDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="12 months"
                android:textColor="@color/grayscale_900"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/subscriptionPlanDateTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/subscriptionPlanDateTitle"
                app:layout_constraintTop_toTopOf="@+id/subscriptionPlanDateTitle" />

            <TextView
                android:id="@+id/planAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/plan_amount_title"
                android:textColor="@color/grayscale_700"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subscriptionPlanDateTitle" />


            <TextView
                android:id="@+id/planAmountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="$39.00"
                android:textColor="@color/grayscale_900"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/planAmountTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/planAmountTitle"
                app:layout_constraintTop_toTopOf="@+id/planAmountTitle" />

            <TextView
                android:id="@+id/taxAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/plan_tax_amount_title"
                android:textColor="@color/grayscale_700"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/planAmountTitle" />


            <TextView
                android:id="@+id/taxAmountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="$1.99"
                android:textColor="@color/grayscale_900"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/taxAmountTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/taxAmountTitle"
                app:layout_constraintTop_toTopOf="@+id/taxAmountTitle" />

            <View
                android:id="@+id/simpleLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/long_simple_line"
                android:backgroundTint="@color/grayscale_400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taxAmountTitle" />

            <TextView
                android:id="@+id/totalAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/plan_total_amount_title"
                android:textColor="@color/grayscale_700"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/simpleLine" />


            <TextView
                android:id="@+id/totalAmountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="$40.99"
                android:textColor="@color/grayscale_900"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/totalAmountTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/totalAmountTitle"
                app:layout_constraintTop_toTopOf="@+id/totalAmountTitle" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/paymentTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/custom_cheque_summary_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subscriptionTypeLayout">

            <TextView
                android:id="@+id/paymentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/plan_payment_method_title"
                android:textColor="@color/grayscale_900"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/simpleLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/paymentTitle" />

            <ImageView
                android:id="@+id/paymentTypeImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/mastercard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/simpleLine2" />

            <TextView
                android:id="@+id/maskedCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/urbanist_bold"
                android:gravity="center"
                android:text="•••• •••• •••• 1459"
                android:textColor="@color/grayscale_900"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/paymentTypeImage"
                app:layout_constraintEnd_toStartOf="@id/changePaymentMethod"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/paymentTypeImage"
                app:layout_constraintTop_toTopOf="@+id/paymentTypeImage" />

            <TextView
                android:id="@+id/changePaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/urbanist_bold"
                android:gravity="center"
                android:text="@string/change"
                android:textColor="@color/primary_900"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/paymentTypeImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/paymentTypeImage" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/custom_button_background"
            android:backgroundTint="@color/primary_900"
            android:fontFamily="@font/urbanist_bold"
            android:text="@string/confirm_payment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.natiqhaciyef.core.base.ui.BaseXmlConstraintLayout>