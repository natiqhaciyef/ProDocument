<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.main.home.options.watermark.AddImageWatermarkFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/addWatermarkImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="36dp"
        android:scaleType="centerCrop"
        android:src="@color/black"
        android:visibility="gone"
        android:layout_marginVertical="24dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCornerEightDpImage" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addMoreImagesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button_background"
        android:elevation="0dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/watermark_add_image"
        android:textAllCaps="false"
        android:textColor="@color/primary_900"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>